<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Collaborator #<%= @collaborator.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/collaborators" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link collaborator start -->
      <div class="col">
        <a href="/collaborators/<%= @collaborator.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit collaborator
        </a>
      </div>
      <!-- Edit link collaborator end -->

      <!-- Delete link collaborator start -->
      <div class="col">
        <a href="/delete_collaborator/<%= @collaborator.id %>" class="btn btn-block btn-outline-secondary">
          Delete collaborator
        </a>
      </div>
      <!-- Delete link collaborator end -->
    </div>

    <dl>
      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <%= @collaborator.user_id %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Project
      </dt>
      <!-- Display project_id start -->
      <dd>
        <%= @collaborator.project_id %>
      </dd>
      <!-- Display project_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@collaborator.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@collaborator.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<!-- Show Page Customization end -->
