<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Collaborator #<%= @collaborator.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/collaborators" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/collaborators/<%= @collaborator.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit collaborator
        </a>
      </div>

      <div class="col">
        <a href="/delete_collaborator/<%= @collaborator.id %>" class="btn btn-block btn-outline-secondary">
          Delete collaborator
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @collaborator.user.present? %>
          <a href="/users/<%= @collaborator.user_id %>">
            <%= @collaborator.user.first_name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Project
      </dt>
      <dd>
        <% if @collaborator.project.present? %>
          <a href="/projects/<%= @collaborator.project_id %>">
            <%= @collaborator.project.user_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@collaborator.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@collaborator.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

