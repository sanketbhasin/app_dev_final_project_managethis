<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All collaborators
    </h1>

    <a href="/collaborators/new" class="btn btn-block btn-outline-secondary">
      Add a new collaborator
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Project
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @collaborators.each do |collaborator| %>
      <tr>
        <!-- Display collaborator.id start -->
        <td>
          <%= collaborator.id %>
        </td>
        <!-- Display collaborator.id end -->

        <!-- Display collaborator.user_id start -->
        <td>
          <% if collaborator.user.present? %>
            <a href="/users/<%= collaborator.user.id %>">
              <%= collaborator.user.first_name %>
            </a>
          <% end %>
        </td>
        <!-- Display collaborator.user_id end -->

        <!-- Display collaborator.project_id start -->
        <td>
          <% if collaborator.project.present? %>
            <a href="/projects/<%= collaborator.project.id %>">
              <%= collaborator.project.user_id %>
            </a>
          <% end %>
        </td>
        <!-- Display collaborator.project_id end -->

        <!-- Display collaborator.created_at start -->
        <td>
          <%= time_ago_in_words(collaborator.created_at) %> ago
        </td>
        <!-- Display collaborator.created_at end -->

        <!-- Display collaborator.updated_at start -->
        <td>
          <%= time_ago_in_words(collaborator.updated_at) %> ago
        </td>
        <!-- Display collaborator.updated_at end -->

        <td>
          <a href="/collaborators/<%= collaborator.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @collaborators, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
