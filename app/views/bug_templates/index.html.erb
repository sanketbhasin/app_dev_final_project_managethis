<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All bugs
    </h1>

    <a href="/bugs/new" class="btn btn-block btn-outline-secondary">
      Add a new bug
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "bug_templates/bugs_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Project
        </th>

        <th>
          Title
        </th>

        <th>
          Description
        </th>

        <th>
          Deadline
        </th>

        <th>
          Image of bug
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @bugs.each do |bug| %>
      <tr>
        <td>
          <%= bug.id %>
        </td>

        <td>
          <% if bug.project.present? %>
            <a href="/projects/<%= bug.project.id %>">
              <%= bug.project.user_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= bug.title %>
        </td>

        <td>
          <%= bug.description %>
        </td>

        <td>
          <%= bug.deadline %>
        </td>

        <td>
          <%= bug.image_of_bug %>
        </td>

        <td>
          <%= bug.status %>
        </td>

        <td>
          <%= time_ago_in_words(bug.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(bug.updated_at) %> ago
        </td>

        <td>
          <a href="/bugs/<%= bug.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @bugs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
