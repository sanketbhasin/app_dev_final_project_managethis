<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All bugs
    </h1>

    <a href="/bugs/new" class="btn btn-block btn-outline-secondary">
      Add a new bug
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Project
        </th>

        <th>
          Title
        </th>

        <th>
          Description
        </th>

        <th>
          Deadline
        </th>

        <th>
          Image of bug
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @bugs.each do |bug| %>
      <tr>
        <!-- Display bug.id start -->
        <td>
          <%= bug.id %>
        </td>
        <!-- Display bug.id end -->

        <!-- Display bug.project_id start -->
        <td>
          <%= bug.project.user_id %>
        </td>
        <!-- Display bug.project_id end -->

        <!-- Display bug.title start -->
        <td>
          <%= bug.title %>
        </td>
        <!-- Display bug.title end -->

        <!-- Display bug.description start -->
        <td>
          <%= bug.description %>
        </td>
        <!-- Display bug.description end -->

        <!-- Display bug.deadline start -->
        <td>
          <%= bug.deadline %>
        </td>
        <!-- Display bug.deadline end -->

        <!-- Display bug.image_of_bug start -->
        <td>
          <%= bug.image_of_bug %>
        </td>
        <!-- Display bug.image_of_bug end -->

        <!-- Display bug.status start -->
        <td>
          <%= bug.status %>
        </td>
        <!-- Display bug.status end -->

        <!-- Display bug.created_at start -->
        <td>
          <%= time_ago_in_words(bug.created_at) %> ago
        </td>
        <!-- Display bug.created_at end -->

        <!-- Display bug.updated_at start -->
        <td>
          <%= time_ago_in_words(bug.updated_at) %> ago
        </td>
        <!-- Display bug.updated_at end -->

        <td>
          <a href="/bugs/<%= bug.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @bugs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
