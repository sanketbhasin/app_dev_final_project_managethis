<h1>
  Add a new bug
</h1>


<hr>

<!-- Form bug start -->
<form action="/create_bug" method="post">
<!-- Form bug end -->

  <!-- Label and input for project_id start -->
  <div class="form-group">
    <label for="project_id">
      Project
    </label>

    <!-- Input for project_id start -->
    <input type="text" id="project_id" name="project_id" class="form-control">
    <!-- Input for project_id end -->
  </div>
  <!-- Label and input for project_id end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <!-- Input for title start -->
    <input type="text" id="title" name="title" class="form-control">
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for deadline start -->
  <div class="form-group">
    <label for="deadline">
      Deadline
    </label>

    <!-- Input for deadline start -->
    <input type="text" id="deadline" name="deadline" class="form-control">
    <!-- Input for deadline end -->
  </div>
  <!-- Label and input for deadline end -->

  <!-- Label and input for image_of_bug start -->
  <div class="form-group">
    <label for="image_of_bug">
      Image of bug
    </label>

    <!-- Input for image_of_bug start -->
    <input type="text" id="image_of_bug" name="image_of_bug" class="form-control">
    <!-- Input for image_of_bug end -->
  </div>
  <!-- Label and input for image_of_bug end -->

  <!-- Label and input for status start -->
  <div class="form-group">
    <label for="status">
      Status
    </label>

    <!-- Input for status start -->
    <input type="text" id="status" name="status" class="form-control">
    <!-- Input for status end -->
  </div>
  <!-- Label and input for status end -->

  <button class="btn btn-block btn-outline-secondary">
    Create bug
  </button>
</form>

<hr>

<a href="/bugs">
  Go back
</a>
