<!-- Validation failure messages -->
<% if @project.present? %>
  <% if @project.errors.any? %>
    <% @project.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new project
</h1>


<hr>

<!-- Form project start -->
<form action="/create_project" method="post">
<!-- Form project end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :first_name, @project.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create project
  </button>
</form>

<hr>

<a href="/projects">
  Go back
</a>
