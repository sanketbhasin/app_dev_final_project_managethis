<!-- Validation failure messages -->
<% if @project.present? %>
  <% if @project.errors.any? %>
    <% @project.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new project
</h1>


<hr>

<!-- Form project start -->
<form action="/create_project" method="post">
<!-- Form project end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @project.user_id %>">
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create project
  </button>
</form>

<hr>

<a href="/projects">
  Go back
</a>
