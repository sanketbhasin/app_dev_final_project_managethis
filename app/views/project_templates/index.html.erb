<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All projects
    </h1>

    <a href="/projects/new" class="btn btn-block btn-outline-secondary">
      Add a new project
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @projects.each do |project| %>
      <tr>
        <!-- Display project.id start -->
        <td>
          <%= project.id %>
        </td>
        <!-- Display project.id end -->

        <!-- Display project.user_id start -->
        <td>
          <% if project.user.present? %>
            <a href="/users/<%= project.user.id %>">
              <%= project.user.first_name %>
            </a>
          <% end %>
        </td>
        <!-- Display project.user_id end -->

        <!-- Display project.created_at start -->
        <td>
          <%= time_ago_in_words(project.created_at) %> ago
        </td>
        <!-- Display project.created_at end -->

        <!-- Display project.updated_at start -->
        <td>
          <%= time_ago_in_words(project.updated_at) %> ago
        </td>
        <!-- Display project.updated_at end -->

        <td>
          <a href="/projects/<%= project.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @projects, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
