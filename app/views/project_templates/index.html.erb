<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All projects
    </h1>

    <a href="/projects/new" class="btn btn-block btn-outline-secondary">
      Add a new project
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "project_templates/projects_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @projects.each do |project| %>
      <tr>
        <td>
          <%= project.id %>
        </td>

        <td>
          <% if project.user.present? %>
            <a href="/users/<%= project.user.id %>">
              <%= project.user.first_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(project.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(project.updated_at) %> ago
        </td>

        <td>
          <a href="/projects/<%= project.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @projects, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
