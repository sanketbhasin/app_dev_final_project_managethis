<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Bugs

    <a data-toggle="collapse" href="#project_bugs_new_form">
      Add bug
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @project.bugs.each do |bug| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/bugs/<%= bug.id %>">
          <%= bug.project_id %>
        </a>

        <a href="/delete_bug_from_project/<%= bug.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="project_bugs_new_form">
        <%= render partial: "project_templates/project_bugs_new_form" %>
      </div>
    </div>

  </ul>
</div>
