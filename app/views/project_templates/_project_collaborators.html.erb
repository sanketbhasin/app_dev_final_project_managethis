<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Collaborators

    <a data-toggle="collapse" href="#project_collaborators_new_form">
      Add collaborator
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @project.collaborators.each do |collaborator| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/collaborators/<%= collaborator.id %>">
          <%= collaborator.created_at %>
        </a>

        <a href="/delete_collaborator_from_project/<%= collaborator.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="project_collaborators_new_form">
        <%= render partial: "project_templates/project_collaborators_new_form" %>
      </div>
    </div>

  </ul>
</div>
