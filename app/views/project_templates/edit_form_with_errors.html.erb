<% if @project.errors.any? %>
  <% @project.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit project #<%= @project.id %>
</h1>

<hr>

<form action="/update_project/<%= @project.id %>" method="post">


  <button class="btn btn-block btn-outline-secondary">
    Update project
  </button>
</form>

<hr>

<a href="/projects">
  Go back
</a>
